<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/family_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:ems="10"
        android:hint="Family name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/first_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/family_name_text"
        android:layout_below="@+id/family_name_text"
        android:ems="10"
        android:hint="First name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/first_name_text"
        android:layout_below="@+id/first_name_text"
        android:ems="10"
        android:hint="Age"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/job_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/age_text"
        android:layout_below="@+id/age_text"
        android:ems="10"
        android:hint="Job"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/job_text"
        android:layout_alignStart="@+id/job_text"
        android:layout_below="@+id/job_text"
        android:onClick="clickOnAdd"
        android:text="Add"
        android:visibility="visible" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/add_button"
        android:layout_alignStart="@+id/add_button"
        android:layout_below="@+id/add_button"
        android:onClick="clickOnDelete"
        android:text="Delete"
        android:visibility="visible" />

    <Button
        android:id="@+id/modify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/delete_button"
        android:layout_alignStart="@+id/delete_button"
        android:layout_below="@+id/delete_button"
        android:onClick="clickOnModify"
        android:text="Modify" />
</RelativeLayout>